.swiper-container
  .swiper-wrapper
    .swiper-slide
      = image_tag("/images/mercari1.jpg", class: "swiper-slide__image")
    .swiper-slide
      = image_tag("/images/mercari2.png", class: "swiper-slide__image")
    .swiper-slide
      = image_tag("/images/mercari3.jpg", class: "swiper-slide__image")
  .swiper-button-prev
  .swiper-button-next
  .swiper-pagination#pagination
%section.pickup-container
  %h2.pickup-container__title
    ピックアップカテゴリー

  - @category_items.zip(@category_name).each do |item, category|
    / = render partial: 'shared/toppage_items',locals: {item: item,category: category}
    %section.items-boxes
      %h3.items-boxes__category.text-center
        = link_to "#{category.name} 新着アイテム",category_path(category.id), class: "new-item"
      .items-boxes__lists
        - item.each do |item|
          %section.items-card
            = link_to item_path(item), class: "item-link" do
              %figure.items-card__photo
                = image_tag item.item_images.first.image
              - if item.business_stats == 3
                .items-card__sold-out
                  %div SOLD
              .items-card-intro
                %h3.items-card-intro__item-name
                  = item.name
                .items-card-num
                  .items-card-num__price
                    = "¥ #{thousands_separator(item.price)}"
                  - if item.likes_count
                    .items-card-num__likes
                      %i.fa.fa-heart
                      %span
                        = item.likes_count
                %p.items-card-intro__tax
                  (税込)
      .items-boxes__view-all.l-right
        = link_to "すべての商品を見る",root_path

  %h2.pickup-container__title
    ピックアップブランド

  - @brand_items.zip(@brand_names).each do |item, name|
    = render partial: 'shared/toppage_items',locals: {item: item,name: name}


