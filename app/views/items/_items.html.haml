.swiper-container
  .swiper-wrapper
    .swiper-slide
      = image_tag("/images/mercari1.jpg", class: "swiper-slide__image")
    .swiper-slide
      = image_tag("/images/mercari2.png", class: "swiper-slide__image")
    .swiper-slide
      = image_tag("/images/mercari3.jpg", class: "swiper-slide__image")
  .swiper-button-prev
  .swiper-button-next
  .swiper-pagination#pagination
%section.pickup-container
  %h2.pickup-container__title
    ピックアップカテゴリー

  %section.items-boxes
    %h3.items-boxes__category.text-center
      = link_to "レディース 新着アイテム",root_path, class: "new-item"
    .items-boxes__lists
      - @lady_items.each do |lady|
        %section.items-card
          = link_to item_path(lady), class: "item-link" do
            %figure.items-card__photo
              = image_tag lady.item_images.first.image
            .items-card-intro
              %h3.items-card-intro__item-name
                = lady.name
              .items-card-num
                .items-card-num__price
                  = "¥ #{thousands_separator(lady.price)}"
                - if lady.likes_count
                  .items-card-num__likes
                    %i.fa.fa-heart
                    %span
                      = lady.likes_count
              %p.items-card-intro__tax
                (税込)

    .items-boxes__view-all.l-right
      = link_to "すべての商品を見る",root_path
