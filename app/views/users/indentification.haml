.default-container
  = render 'items/header'
  = render 'mypage-header'

%main.l-container.clearfix
  = render 'l-side'
  .l-content
    %section.l-chapter-container.mypage-identification
      %h2.l-chapter-container__head 本人情報の登録
      %form.l-chapter-container__inner{action: "https://www.mercari.com/jp/mypage/identification/save/", method: "POST", novalidate: ""}
        %div
          %p.l-chapter-container__inner--info
            お客さまの本人情報をご登録ください。
            %br>/
            登録されたお名前・生年月日を変更する場合、本人確認書類の提出が必要になります。
          %p.l-chapter-container__inner--right
            %a{href: "/jp/help_center/article/495/", target: "_blank" ,class: "l-chapter-container__inner--text"}
              本人確認書類のアップロードについて
              %i.fa.fa-angle-right.l-chapter-container__inner--icon
        .form-group
          %label お名前
          %p 山田 太郎
        .form-group
          %label お名前カナ
          %p ヤマダ タロウ
        .form-group
          %label{for: "birthday"} 生年月日
          %p 1993/12/24
        .form-group
          %label{for: "zip_code"} 郵便番号
          %span.form-group__arbitrary 任意
          %input.input-default{name: "zip_code", placeholder: "例）1234567", type: "text", value: "4460073"}/
        .form-group
          %label{for: "prefecture"} 都道府県
          %span.form-group__arbitrary 任意
          .select-wrap
            %select.select-default{name: "prefecture"}
              %option --
              %option 北海道
              %option 青森県
              %option 岩手県
              %option 宮城県
              %option 秋田県
              %option 山形県
              %option 福島県
              %option 東京都
              %option 神奈川県
              %option 埼玉県
              %option 千葉県
              %option 茨城県
              %option 栃木県
              %option 群馬県
              %option 山梨県
              %option 新潟県
              %option 長野県
              %option 富山県
              %option 石川県
              %option 福井県
              %option{selected: "selected"} 愛知県
              %option 岐阜県
              %option 静岡県
              %option 三重県
              %option 大阪府
              %option 兵庫県
              %option 京都府
              %option 滋賀県
              %option 奈良県
              %option 和歌山県
              %option 鳥取県
              %option 島根県
              %option 岡山県
              %option 広島県
              %option 山口県
              %option 徳島県
              %option 香川県
              %option 愛媛県
              %option 高知県
              %option 福岡県
              %option 佐賀県
              %option 長崎県
              %option 熊本県
              %option 大分県
              %option 宮崎県
              %option 鹿児島県
              %option 沖縄県
            %i.fa.fa-angle-down
        .form-group
          %label{for: "city"} 市区町村
          %span.form-group__arbitrary 任意
          %input.input-default{name: "city", placeholder: "例) 横浜市緑区", type: "text", value: "名古屋市"}/
        .form-group
          %label{for: "address1_label"} 番地
          %span.form-group__arbitrary 任意
          %input.input-default{name: "address1", placeholder: "例) 青山1−1−1", type: "text", value: "栄町3丁目-9"}/
        .form-group
          %label{for: "address2_label"} 建物名
          %span.form-group__arbitrary 任意
          %input.input-default{name: "address2", placeholder: "例) 柳ビル103", type: "text", value: "イーストクライム302"}
        %button.l-chapter-container__btn{type:"submit"} 登録する
        .form-group.text-right
          %p.l-chapter-container__inner--right
            %a{href: "/jp/help_center/article/423/", target: "_blank",class: "l-chapter-container__inner--text"}
              本人情報の登録について
              %i.fa.fa-angle-right.l-chapter-container__inner--icon
        %input{name: "__csrf_value", type: "hidden", value: "4ef49fdf0b674df00fd4d50a9826b8b4315993b7a81673e8f9d14c75a1ee2c8e1926a3263664571f3217cf83b5746fb808719167aeda3014de90649deb54e14fb"}

